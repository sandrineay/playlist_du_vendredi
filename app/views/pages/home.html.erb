<div class="container">
  <div class="featured-card-container mb-60">
    <div class="featured-card mt-40">
      <h2><%= @featured_playlist.title %></h2>
      <% if @featured_playlist.description %>
        <p><%= @featured_playlist.description %></p>
      <% end %>
      <% @featured_playlist.songs.each do |song| %>
        <div class="featured_playlist_song">
          <% category = song.belongings.find_by(playlist: @featured_playlist).category %>
          <div class="song-category">
            <%= category.emoji %><span class="ml-20 song-category-name"><%= category.name %></span>
          </div>
          <div class="song-details">
            <%= song.title %> <span class="text-italic-light">by</span> <%= song.artists.map(&:name).join(', ') %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="players mt-60">
      <div class="player-iframes">
        <div class="player-iframe">
          <h2 class="text-center">Ouvre grand tes esgourdes <i class="fas fa-music"></i></h2>
          <iframe scrolling="no" frameborder="0" allowTransparency="true" width="300" height="300" src=<%="https://www.deezer.com/plugins/player?format=square&autoplay=false&playlist=false&width=300&height=300&color=007FEB&layout=dark&size=medium&type=playlist&id=#{@featured_playlist.deezer_id}&app_id=1"%> ></iframe>
        </div>
      </div>
    </div>
  </div>

  <div class="playlists mt-40">
    <h2>Encore plus de playlists <i class="fas fa-hand-point-down"></i></h2>
    <div class="playlist-grid mt-40">
      <% @latest_playlists.each do |playlist| %>
        <div class="playlist-card">
          <div class="playlist-card-hover">
            <i class="far fa-play-circle"></i>
          </div>
          <%= image_tag "https://api.deezer.com/playlist/#{playlist.deezer_id}/image?size=big" %>
          <p><%= playlist.title %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
