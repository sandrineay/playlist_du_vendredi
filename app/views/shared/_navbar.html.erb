<div class="navbar-fixed-top wrapper-black">
  <div class="container">
    <div class="navbar-pdv">
      <!-- Logo -->
      <%= link_to root_path, class: "navbar-pdv-brand" do %>
        <div class="navbar-logo">
        </div>
      <% end %>

      <!-- Right Navigation -->
      <div class="navbar-pdv-right hidden-xs hidden-sm">

        <!-- Links when logged in -->
        <%= link_to "La playlist du vendredi", root_path, class: "navbar-pdv-item navbar-pdv-link #{'navbar-pdv-link-active' if params["controller"] == "pages" && params["action"] == "home"}" %>
        <%= link_to "Historique", playlists_path, class: "navbar-pdv-item navbar-pdv-link #{'navbar-pdv-link-active' if params["controller"] == "playlists" && params["action"] == "index"}" %>
        <%= link_to "Hors-série", hors_serie_path, class: "navbar-pdv-item navbar-pdv-link #{'navbar-pdv-link-active' if params["controller"] == "pages" && params["action"] == "special"}" %>
        <%= link_to "À propos", a_propos_path, class: "navbar-pdv-item navbar-pdv-link #{'navbar-pdv-link-active' if params["controller"] == "pages" && params["action"] == "about"}" %>
        <%= link_to "Spotify", "https://open.spotify.com/user/w5azliprnz2bzz9ifkuodxbgj", target: '_blank', class: 'btn-pink' %>
      </div>

      <!-- Dropdown list appearing on mobile only -->
      <div class="navbar-pdv-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-pdv-dropdown-menu">
            <li><%= link_to "La playlist du vendredi", root_path %></li>
            <li><%= link_to "Historique", playlists_path %></li>
            <li><%= link_to "Hors-série", hors_serie_path %></li>
            <li><%= link_to "À propos", a_propos_path %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>


